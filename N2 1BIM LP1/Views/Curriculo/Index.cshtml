@model List<CurriculoViewModel>;

<h2 class="text-center">Listagem de Currículos</h2>
<br />

<div class="row justify-content-center">
    <div class="col-auto">
        <table id="table" class="table table-striped table-responsive">
            <tr>
                <th>CPF</th>
                <th>Nome</th>
            </tr>

            @foreach (var cv in Model)
            {
                <tr>
                    <td>@cv.Cpf</td>
                    <td>@cv.Nome </td>
                </tr>
            }
        </table>

        <form asp-action="Alterar">
            <input type="hidden" name="valorCPF" id="txtDataSwapA">
            <input type="submit" value="Alterar" class="btn-info"/>
        </form>
        <br/>
        <form asp-action="Excluir">
            <input type="hidden" name="valorCPF" id="txtDataSwapB">
            <input type="submit" value="Excluir" class="btn-danger"/>
        </form>
    </div>
</div>
